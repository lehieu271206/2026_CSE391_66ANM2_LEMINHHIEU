<script>
let id = 2;
let currentRow = null;

function openPopup() {
    currentRow = null;
    document.querySelector(".popup-header span").innerText = "New Employee";
    document.querySelector(".btn-save").innerText = "Save";
    resetForm();
    document.getElementById("popup").style.display = "block";
}

function closePopup() {
    document.getElementById("popup").style.display = "none";
}

function saveEmployee() {
    let name = document.getElementById("name").value;
    let email = document.getElementById("email").value;
    let phone = document.getElementById("phone").value;
    let position = document.getElementById("position").value;

    if (name === "" || email === "" || phone === "" || position === "") {
        alert("Vui lòng nhập đầy đủ thông tin");
        return;
    }

    if (currentRow === null) {
        // ADD
        id++;
        let table = document.getElementById("employeeTable");
        let row = table.insertRow();

        row.innerHTML = `
            <td>${id}</td>
            <td>${name}</td>
            <td>${email}</td>
            <td>${phone}</td>
            <td>${position}</td>
            <td>
                <button class="btn-edit" onclick="editEmployee(this)">Edit</button>
                <button class="btn-delete" onclick="deleteEmployee(this)">Delete</button>
            </td>
        `;
    } else {
        // EDIT
        currentRow.cells[1].innerText = name;
        currentRow.cells[2].innerText = email;
        currentRow.cells[3].innerText = phone;
        currentRow.cells[4].innerText = position;
    }

    closePopup();
}

function editEmployee(btn) {
    currentRow = btn.parentElement.parentElement;

    document.getElementById("name").value = currentRow.cells[1].innerText;
    document.getElementById("email").value = currentRow.cells[2].innerText;
    document.getElementById("phone").value = currentRow.cells[3].innerText;
    document.getElementById("position").value = currentRow.cells[4].innerText;

    document.querySelector(".popup-header span").innerText = "Edit Employee";
    document.querySelector(".btn-save").innerText = "Update";

    document.getElementById("popup").style.display = "block";
}

function deleteEmployee(btn) {
    if (confirm("Bạn có chắc chắn muốn xóa không?")) {
        btn.parentElement.parentElement.remove();
    }
}

function resetForm() {
    document.getElementById("name").value = "";
    document.getElementById("email").value = "";
    document.getElementById("phone").value = "";
    document.getElementById("position").value = "";
    document.querySelector('input[name="gender"][value="Male"]').checked = true;
}
</script>

